[
  {
    "name": "aspect.xts",
    "rule": [
      {
        "classDecorator": "parentClass",
        "value": "@parentClass(ViewAspect)",
        "keyword": "vaspect",
        "min": 1,
        "max": 1
      }
    ]
  },
  {
    "name": "app.xts",
    "rule": [
      {
        "classDecorator": "parentClass",
        "value": "@parentClass(App)",
        "keyword": "app",
        "min": 1,
        "max": 1
      }
    ]
  },
  {
    "name": ".*",
    "rule": [
      {
        "classDecorator": "parentClass",
        "value": "@parentClass(Component)",
        "keyword": "component",
        "min": 0,
        "max": 1
      }
    ]
  }
]
